@model ERP.Web.Service.ViewModels.ExamSearchListViewModel_result

<link rel="stylesheet" href="~/StaticFiles/lib/select2/dist/css/select2.css" />

<!-- Excel 檔案上傳區 -->
<form id="uploadForm" enctype="multipart/form-data">
    <input type="file" id="fileInput" name="file" accept=".xlsx, .xls" />
    <button class="btn btn-primary btn-sm" type="submit">上傳 Excel</button>
</form>
<!-- 狀態訊息 -->
<p id="uploadStatus"></p>

<hr />

<h2 class="mb-4">請填寫考試資訊</h2>

<form method="get" action="@Url.Action("Test", "Exam")">
    <label for="TestType" class="mt-3">科目：</label>
    <select id="TestType" name="TestType" class="form-select">
        <option value="">請選擇</option>
        @foreach (var testType in Model.TestTypeList)
        {
            <option value="@testType.Value">@testType.Text</option>
        }
    </select>

    <label for="Class" class="mt-3">選擇考卷：</label>
    <select id="Select2ClassNameList" name="ClassNameList" class="form-select" multiple>
        @foreach (var className in Model.ClassNameList)
        {
            <option value="@className">@className</option>
        }
    </select>

    <label for="KidID" class="mt-3">選擇學生：</label>
    <select id="KidID" name="KidID" class="form-select">
        <option value="">請選擇</option>
        @foreach (var kid in Model.KidList)
        {
            <option value="@kid.Value">@kid.Text</option>
        }
    </select>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">送出</button>
    </div>
</form>

<script src="~/StaticFiles/lib/select2/dist/js/select2.min.js"></script>
<script>
    $(function () {
        $('#Select2ClassNameList').select2({
        placeholder: '選擇考卷',
            allowClear: true,
            closeOnSelect: false,
        });
    });
</script>
