@model ERP.Web.Service.ViewModels.ExamDataViewModel_result
@{
    Layout = null;  // 禁用布局
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* 考卷格式 */
    .exam-container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        font-size: 18px;
        line-height: 1.5;
    }

    .question-number {
        font-weight: bold;
    }

    .answer-line {
        display: block;
        width: 100%;
        border: none;
        border-bottom: 1px;
        font-size: 18px;
        padding: 18px;
        outline: none;
    }

    /* 片語部分強制換頁 */
    .page-break {
        page-break-before: always; /* 列印時片語會從新的一頁開始 */
    }

    /* 提交按鈕置中 */
    .submit-container {
        text-align: center;
        margin-top: 30px;
    }

    .exam-title {
        font-weight: bold;
        font-size: 8px;
    }

    .exam-section {
        font-size: 18px;
        margin-top: 20px;
        margin-bottom: 15px;
        font-weight: bold;
    }
</style>

<form method="post" action="@Url.Action("Submit", "Exam")">
    @{
        var words = Model.VocabularyList.Where(x => x.Type == "Word").ToList();
        var phrases = Model.VocabularyList.Where(x => x.Type == "Phrase").ToList();
    }
    @if (words.Any())
    {
        @for (int X = 0; X < 2; X++)
        {
            <div class="exam-container page-break">
                <!-- 單字考卷 -->

                <div style="display: flex; justify-content: space-between;">
                    <label class="exam-section">
                        單字測驗 ( 寫出中文所代表的意思 )
                    </label>
                    <label class="exam-title">
                        @Model.Title 英文試卷
                    </label>
                    <label class="exam-section">
                        姓名:_________________________
                    </label>
                </div>

                @for (int i = 0; i < words.Count; i++)
                {
                    <div>
                        <span class="question-number">@(i + 1).</span>
                        <span class="question-text">@words[i].Question</span>
                    </div>
                    <div>
                        <input type="text" class="answer-line" name="answers[@i]" required />
                    </div>
                }

            </div>
        }
    }

    @* 只有在單字考卷後才換頁，確保有內容時才顯示換頁標籤 *@
    @if (words.Any())
    {
        <div class="exam-container page-break">
            <div style="display: flex; justify-content: space-between;">
                <label class="exam-section">
                    單字測驗 ( 寫出中文所代表的意思 )
                </label>
                <label class="exam-title">
                    @Model.Title 英文答案卷
                </label>
            </div>
            <!-- 單字考卷答案部分 -->
            @for (int i = 0; i < words.Count; i++)
            {
                <div>
                    <span class="question-number">@(i + 1).</span>
                    <span class="question-text">@words[i].Question</span>
                </div>
                <div class="answer-line">
                    <span style="background-color:lightgray">@words[i].Answer</span>
                </div>
            }
        </div>
    }

    @* 只有在片語考卷存在時才強制換頁 *@
    @if (phrases.Any())
    {
        @for (int y = 0; y < 2; y++)
        {
            <div class="exam-container page-break">
                <!-- 片語考卷 -->
                <div style="display: flex; justify-content: space-between;">
                    <label class="exam-section">
                        片語測驗 ( 寫出對應的問句或回答 )
                    </label>
                    <label class="exam-title">
                        @Model.Title 英文試卷
                    </label>
                    <label class="exam-section">
                        姓名:_________________________
                    </label>
                </div>
                @for (int i = 0; i < phrases.Count; i++)
                {
                    <div>
                        <span class="question-number">@(i + 1).</span>
                        <span class="question-text">@phrases[i].Question</span>
                    </div>
                    <div>
                        <input type="text" class="answer-line" name="answers[@(words.Count + i)]" required />
                    </div>
                }
            </div>
        }


        <div class="exam-container page-break">
            <!-- 片語考卷答案部分 -->
            <div style="display: flex; justify-content: space-between;">
                <label class="exam-section">
                    片語測驗 ( 寫出對應的問句或回答 )
                </label>
                <label class="exam-title">
                    @Model.Title 英文答案卷
                </label>
            </div>
            @for (int i = 0; i < phrases.Count; i++)
            {
                <div>
                    <span class="question-number">@(i + 1).</span>
                    <span class="question-text">@phrases[i].Question</span>
                </div>
                <div class="answer-line">
                    <span style="background-color:lightgray">@phrases[i].Answer</span>
                </div>
            }
        </div>
    }

    @* <div class="submit-container">
    <button type="submit">提交</button>
    </div> *@
</form>
