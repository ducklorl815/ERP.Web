<h2 class="mb-3">請填寫考試資訊</h2>

<form method="get" action="@Url.Action("Test", "Exam")">
    <div>
        <div class="row align-items-end gy-3 gx-4 col-12">

            <div class="col-2">
                <label for="TestType" class="form-label col-5">科目：</label>
                <select id="TestType" name="TestType" class="form-select col-6">
                    <option value="">請選擇</option>
                    @foreach (var testType in Model.TestTypeList)
                    {
                        <option value="@testType.Value">@testType.Text</option>
                    }
                </select>
            </div>

            <div class="col-5">
                <label for="Select2ClassNameList" class="form-label col-3">選擇考卷：</label>
                <select id="Select2ClassNameList" name="ClassNameList" class="form-select col-8" multiple>
                    @if (Model.ClassNameList != null)
                        @foreach (var className in Model.ClassNameList)
                        {
                            <option value="@className">@className</option>
                        }
                </select>
            </div>

            <div class="col-2 row align-items-center">
                <label for="Number" class="me-2 mb-0">題數：</label>
                <input id="Number" type="number" name="TestNumber" class="form-control" style="width:100px;" value="18" />
            </div>

            <div class="col-2">
                <label for="KidID" class="form-label">選擇學生：</label>
                <select id="KidID" name="KidID" class="form-select">
                    <option value="">請選擇</option>
                    @if(Model.KidList != null)
                    {
                        @foreach (var kid in Model.KidList)
                        {
                            <option value="@kid.Value">@kid.Text</option>
                        } 
                    }
                </select>
            </div>

            <div class="col-1">
                <button type="submit" class="btn btn-primary">送出</button>
            </div>

        </div>
    </div>

</form>
<hr />