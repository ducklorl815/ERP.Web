@model ERP.Web.Service.ViewModels.ExamSearchListViewModel_result

<div class="modal fade" id="newTestModal" tabindex="-1" aria-labelledby="newTestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTestModalLabel">請填寫考試資訊</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="get" action="@Url.Action("Test", "Exam")">
                    <label for="TestType" class="mt-3">科目：</label>
                    <select id="TestType" name="TestType" class="form-select">
                        <option value="">請選擇</option>
                        @foreach (var testType in Model.TestTypeList)
                        {
                            <option value="@testType.Value">@testType.Text</option>
                        }
                    </select>

                    <label for="Class">選擇考卷：</label>
                    <select id="Class" name="Class" multiple="multiple" class="form-select">
                        @foreach (var className in Model.ClassNameList)
                        {
                            <option value="@className">@className</option>
                        }
                    </select>

                    <label for="CorrectType">選擇題目類型：</label>
                    <select id="CorrectType" name="CorrectType" class="form-select">
                        <option value="">請選擇</option>
                        @foreach (var item in Model.CorrectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>

                    <label for="KidID">選擇學生：</label>
                    <select id="KidID" name="KidID" class="form-select">
                        <option value="">請選擇</option>
                        @foreach (var kid in Model.KidList)
                        {
                            <option value="@kid.Value">@kid.Text</option>
                        }
                    </select>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                        <button type="submit" class="btn btn-primary">送出</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
